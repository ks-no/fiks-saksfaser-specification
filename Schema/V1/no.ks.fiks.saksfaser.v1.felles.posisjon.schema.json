{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "no.ks.fiks.saksfaser.v1.felles.posisjon.schema.json",
    "title": "Posisjon",
    "description": "Punkt - kopiert fra Fiks Plan",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "Point"
            ]
        },
        "koordinater": {
            "type": "array",
            "minItems": 2,
            "items": {
                "type": "number"
            }
        },
        "koordinatsystem": {
            "type": "object",
            "description" : "Kodeliste: no.ks.fiks.saksfaser.v1.kodelister.koordinatsystem.json",
            "properties": {
                "kodeverdi": {
                    "type": "string"
                },
                "kodebeskrivelse": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "type",
        "koordinater",
        "koordinatsystem"
    ]
}