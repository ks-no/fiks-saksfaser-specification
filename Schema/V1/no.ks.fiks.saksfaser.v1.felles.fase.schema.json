{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "no.ks.fiks.saksfaser.v1.felles.fase.schema.json",
    "title": "Fase",
    "type": "object",
    "properties": {
        "faseid": {
            "type": "string"
        },
        "fasenavn": {
            "type": "string"
        },
        "kategori": {
            "type": "object",
            "description": "Kodeliste: no.ks.fiks.saksfaser.v1.kodelister.fasekategori.json",
            "properties": {
                "kodeverdi": {
                    "type": "string"
                },
                "kodebeskrivelse": {
                    "type": "string"
                }
            }
        },
        "status": {
            "type": "string",
            "enum": ["Planlagt", "UnderArbeid", "Utfoert"]            
        },
        "milepeler": {
            "type": "array",
            "items": {
                "$ref": "no.ks.fiks.saksfaser.v1.felles.milepel.schema.json"
            }
        },
        "vedtak": {
            "type": "object",
            "description": "Kodeliste: no.ks.fiks.saksfaser.v1.kodelister.vedtak.json",
            "properties": {
                "kodeverdi": {
                    "type": "string"
                },
                "kodebeskrivelse": {
                    "type": "string"
                }
            },
            "required": [
                "kodeverdi"
            ]
        },
        "referanseJournalpost": {
            "type": "array",
            "items": {
                "$ref": "no.ks.fiks.saksfaser.v1.felles.referansejournalpost.schema.json"
            }
        }
    },
    "required": [
        "faseid",
        "fasenavn",
        "kategori",
        "status"
    ]
}